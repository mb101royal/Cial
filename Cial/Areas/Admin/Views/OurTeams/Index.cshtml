@model IEnumerable<OurTeamDetailsViewModel>
@{
    ViewData["Title"] = "Index";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Index</h1>

    <a class="btn btn-primary mb-3" asp-action="Create" asp-controller="OurTeams">Create Team Member</a>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Job Title</th>
                <th scope="col">Image</th>
                <th scope="col" colspan="2">Handle</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.JobTitle</td>
                    <td>
                         <img src="imgs/@item.Image" style="width: 300px">
                    </td>
                    <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-controller="OurTeams" asp-route-id="@item.Id">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="OurTeams" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
                }
            }
            else
            {
                <tr>
                    <th scope="row" colspan="5">No data</th>
                </tr>
            }
            
        </tbody>
    </table>

</div>
<!-- /.container-fluid -->